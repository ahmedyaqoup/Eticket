<div>

    @if (Model.MovieStatus == Eticket.Data.Enum.MovieStatus.Upcoming)
    {
        <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-primary ">@Model.MovieStatus</span>

        </div>
    }
    @if (Model.MovieStatus == Eticket.Data.Enum.MovieStatus.Available)
    {
        <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-success">@Model.MovieStatus</span>

        </div>
    }
    @if (Model.MovieStatus == Eticket.Data.Enum.MovieStatus.Expired)
    {
        <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-danger">@Model.MovieStatus</span>

        </div>
    }
</div>
<hr />

﻿<div class="card mb-3 col-12">
    <div class="row g-0">

        <div class="card-header">
            <h3 class="card-header">Details @Model.Name</h3>
        </div>

        <div class="col-md-4">
            <img src="~/images/movies/@Model.ImgUrl" class="img-fluid rounded-start" alt="...">
        </div>




        <div class="col-md-8">
            <div class="card-body">

                <p class="card-text">@Model.Description</p>
                <p class="card-text"> Price: <span class="badge text-bg-warning">@Model.Price</span></p>
                <p><strong>Cinema:</strong> @Model.Cinema.Name</p>

                <p><strong>Start Date:</strong>@Model.StartDate</p>
                <p><strong>End Date:</strong>@Model.EndDate</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <P>
                    @foreach (var item in Model.Actors)
                    {

                        <a href=""> <img src="~/images/cast/@item.ProfilePicture" /> </a>

                    }



                </P>


                <video controls src="@Model.TrailerUrl"> </video>


            </div>


            <div class="card-footer">

                <a href="#" class="btn btn-success">Book Tickets...</a>
            </div>
        </div>
    </div>
</div>
